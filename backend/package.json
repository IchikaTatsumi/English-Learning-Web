{
  "name": "backend",
  "version": "1.0.0",
  "description": "English Learning Web backend",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:db:start": "cd .. && docker-compose up -d postgres",
    "docker:db:stop": "cd .. && docker-compose stop postgres",
    "docker:db:restart": "cd .. && docker-compose restart postgres",
    "docker:db:logs": "cd .. && docker-compose logs -f postgres",
    "docker:db:reset": "cd .. && docker-compose down -v && docker-compose up -d postgres",
    "docker:pgadmin:start": "cd .. && docker-compose up -d pgadmin",
    "docker:pgadmin:stop": "cd .. && docker-compose stop pgadmin",
    "docker:up": "cd .. && docker-compose up -d",
    "docker:down": "cd .. && docker-compose down",
    "docker:ps": "cd .. && docker-compose ps",
    "db:verify": "docker exec english_learning_db psql -U dbuser -d mydatabase -c \"\\dt\"",
    "db:check": "docker exec english_learning_db psql -U dbuser -d mydatabase -c \"SELECT tablename FROM pg_tables WHERE schemaname = 'public';\"",
    "db:users": "docker exec english_learning_db psql -U dbuser -d mydatabase -c \"SELECT * FROM \\\"user\\\";\"",
    "db:connect": "docker exec -it english_learning_db psql -U dbuser -d mydatabase",
    "dev": "npm run docker:db:start && npm run start:dev",
    "dev:fresh": "npm run docker:db:reset && npm run start:dev"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "change-case": "^5.4.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "es6-shim": "^0.35.8",
    "nestjs-minio": "^2.6.2",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@types/bcrypt": "^6.0.0",
    "@types/change-case": "^0.0.30",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
